common_deps(
    "//system:folly",
    "//system:glog",
    "//system:proxygenlib",
    "//system:wangle",
)

create_lib("Util", header_only=True)
create_lib("Config")

create_lib("HTTPRequest",
    additional_headers=[
        "StringUtils.h",
    ],
)
create_lib("HTTPResponse", 
    additional_headers=[
        "EnumHash.h",
        "StringUtils.h",
    ],
)
create_lib("Route", 
    [
        name("HTTPResponse"),
        name("HTTPRequest"),
    ],
    additional_headers=[
        "Route-inl.h",
        "EnumHash.h",
    ],
)
create_lib("Router", [name("Route"), name("Util")])

create_lib("HTTPHandler", [
    name("Config"),
    name("Router"),
])

create_lib("HTTPHandlerFactory", [
    name("Config"),
    name("Router"),
    name("HTTPHandler"),
])

create_lib("Server", [
    name("Config"),
    name("Router"),
    name("HTTPHandler"),
    name("HTTPHandlerFactory"),
    "//system:proxygenhttpserver",
])

cxx_library(
    name="sakura-lib", 
    srcs=[],
    headers=[],
    exported_deps=[
        name("Server"),
    ]
)

cxx_binary(
    name="simple-server",
    srcs=[
        "main.cpp",
    ],
    deps=[
        ":sakura-lib",
    ],
)
